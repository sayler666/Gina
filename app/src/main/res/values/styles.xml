<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccentDark</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
    </style>

    <style name="toolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="bubble_text_appearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="year_month_header">
        <item name="android:background">@color/colorAccentDark</item>
        <item name="android:paddingLeft">@dimen/p_medium</item>
        <item name="android:paddingRight">@dimen/p_medium</item>
        <item name="android:paddingTop">@dimen/p_small</item>
        <item name="android:paddingBottom">@dimen/p_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="day_header">
        <item name="android:transitionName">time</item>
        <item name="android:paddingLeft">@dimen/p_medium</item>
        <item name="android:paddingRight">@dimen/p_medium</item>
        <item name="android:paddingTop">@dimen/p_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/DroidSerif-Bold.ttf</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="content">
        <item name="android:layout_width">match_parent</item>
        <item name="fontPath">fonts/DroidSerif-Regular.ttf</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/day</item>
        <item name="android:paddingBottom">@dimen/p_medium</item>
        <item name="android:paddingLeft">@dimen/p_medium</item>
        <item name="android:paddingRight">@dimen/p_medium</item>
        <item name="android:paddingTop">@dimen/p_medium</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>
