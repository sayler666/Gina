<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="MissingPrefix">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/year_month"
                style="@style/year_month_header" />

            <TextView
                android:id="@+id/day"
                style="@style/day_header"
                android:layout_below="@+id/year_month" />

            <EditText
                android:id="@+id/content"
                fontPath="fonts/DroidSerif-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day"
                android:paddingBottom="@dimen/p_medium"
                android:paddingLeft="@dimen/p_medium"
                android:paddingRight="@dimen/p_medium"
                android:paddingTop="@dimen/p_medium"
                android:textSize="@dimen/ts_medium" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
