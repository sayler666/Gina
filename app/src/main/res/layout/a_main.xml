<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/a_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/p_bottom_fab" />

    <com.futuremind.recyclerviewfastscroll.FastScroller
        android:id="@+id/fastscroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        app:fastscroll__bubbleColor="@color/colorAccent"
        app:fastscroll__bubbleTextAppearance="@style/bubble_text_appearance"
        app:fastscroll__handleColor="@color/colorAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_day"
        style="@style/fab"
        android:src="@drawable/ic_add_white_24px" />
</RelativeLayout>
